<Defaults>
	<Text class='bestFit' color='#ffffff' fontStyle='Bold' outline='#000000' outlineSize='1 1'
		resizeTextForBestFit='True' resizeTextMaxSize='60'/>
	<Button class='basicButton' height='75' width='70'/>
	<InputField class='basicInpitField' height='85' width='250'
		color='#000000' textColor='#ffffff00' interactable='false'/>
	<InputField class='inputCharacteristic' height='70' width='120' fontSize='50'
		color='#00000000' textColor='#ffffff00' characterValidation='Integer'
		onValueChanged='ChangeInputCharacteristic' onEndEdit='InputEndChange'/>
	
	<InputField class='fieldForConnect' onEndEdit='EditInput' fontSize='60' characterValidation='Alphanumeric'/>
	<Button class='buttonForConnect' onClick='EnableCharacteristic' resizeTextForBestFit='True' resizeTextMaxSize='60'
		text='Подключить' color='green' />
</Defaults>

<Panel position='0 0 -21' height='190' width='1600'>
	<TableLayout cellSpacing='10'>
		<Row>
			<Cell columnSpan='4'>
				<Text id='name' resizeTextForBestFit='True' resizeTextMaxSize='80' color='#000000' alignment='MiddleCenter'>
				Название
				</Text>
			</Cell>
		</Row>
		<Row>
			<Text color='#000000' resizeTextForBestFit='True' resizeTextMaxSize='80'
				offsetXY='-620 0'>
			Значение
			</Text>
			<InputField class='basicInpitField' offsetXY='-190 0'>
			</InputField>
			<Text id='textCharacteristic' class='bestFit' offsetXY='-190 0'>
			0
			</Text>
			<Button id='buttonMinus' class='basicButton' image='uiMinus' offsetXY='-370 0' onClick='Minus("textCharacteristic")'>
			</Button>
			<Button id='buttonPlus' class='basicButton' image='uiPlus' offsetXY='-15 0' onClick='Plus("textCharacteristic")'>
			</Button>
			
			<Text color='#000000' resizeTextForBestFit='True' resizeTextMaxSize='80'
				offsetXY='250 0'>
			Бонус
			</Text>
			<InputField class='basicInpitField' offsetXY='590 0'>
			</InputField>
			<InputField id='inputCharacteristicBonus' class='inputCharacteristic' offsetXY='600 0'>
			999
			</InputField>
			<Text id='textCharacteristicBonus' class='bestFit' offsetXY='590 0'>
			0
			</Text>
			<Button id='buttonMinusBonus' class='basicButton' image='uiMinus' offsetXY='415 0'
				onClick='Minus("textCharacteristicBonus")' visibility='Black'>
			</Button>
			<Button id='buttonPlusBonus' class='basicButton' image='uiPlus' offsetXY='770 0'
				onClick='Plus("textCharacteristicBonus")' visibility='Black'>
			</Button>
		</Row>
	</TableLayout>
</Panel>

<Panel position='0 0 -22' visibility='Black' height='75' width='70'>
	<Button onClick='PanelTool' image='uiGear' height='75' width='70' offsetXY='835 70'>
	</Button>
	<VerticalScrollView id='panelTool' height='160' width='1600'
		color='black' offsetXY='0 180' active='false' verticalScrollbarVisibility='AutoHideAndExpandViewport'>
		<TableLayout id='panelTable'  cellSpacing='10' height='510'>
			<Row preferredHeight='60'>
				<Cell columnSpan='2' dontUseTableCellBackground='true'>
				</Cell>
				<Cell columnSpan='2' dontUseTableCellBackground='true'>
					<Text class='bestFit'>
					Выберите тип характеристики
					</Text>
				</Cell>
			</Row>
			<Row preferredHeight='90'>
				<Cell columnSpan='2'>
					<InputField id='inputName' onEndEdit='ChangeName' placeholder='Название' fontSize='60' characterValidation='Name'>
					</InputField>
				</Cell>
				<Cell columnSpan='2'>
					<Dropdown id='selectionType' onValueChanged='DropdownChange' fontSize='55' height='70' itemHeight='80'
						itemBackgroundColors='black' itemTextColor='white' dropdownBackgroundColor='#808080'>
						<Option>обычная</Option>
						<Option>боевая</Option>
						<Option>мирная</Option>
					</Dropdown>
				</Cell>
			</Row>
			<TableLayout cellSpacing='10' offsetXY='0 -160'>
				<Row preferredHeight='60'>
					<Cell dontUseTableCellBackground='true'>
						<Text class='bestFit'>
						Установите GUID необходимой плашки
						</Text>
					</Cell>
					<Cell dontUseTableCellBackground='true'>
						<Text class='bestFit'>
						Установите множитель за каждое ОХ
						</Text>
					</Cell>
					<Cell dontUseTableCellBackground='true'>
						<Text class='bestFit'>
						Установите множитель за каждый Уровень
						</Text>
					</Cell>
				</Row>
				<NewRow />
			</TableLayout>
		</TableLayout>
	</VerticalScrollView>
</Panel>

<Panel active='false'>
	<Text id='GUIDLevel'>
	</Text>
</Panel>